<!DOCTYPE html>

#parse ($init)

<html class="$root_css_class" dir="#language ("lang.dir")" lang="$w3c_language_id">

<head>
	<title>$the_title - $company_name</title>

	<meta content="initial-scale=1.0, width=device-width" name="viewport" />

	$theme.include($top_head_include)
	
	<style type="text/css">
	
		#wrapper {
			background:white url("/welcome-theme/images/custom/left-edge.png") top left repeat-y;
			margin-left: auto;
			margin-right: auto;
			max-width: 1100px;
			padding-top: 0px;
			padding-right: 0px;
			
			@include respond-to(phone) {
				padding-left: 0.5em;
				padding-right: 0.5em;
			}

			@include respond-to(tablet) {
				padding-left: 2em;
				padding-right: 2em;
				padding-left: 0.5em;
			}
		}
		
		#wrapper-in {
			background:white url("/welcome-theme/images/custom/left-edge.png") top right repeat-y;
			margin:0px;
			padding-right: 60px;
		}
		
		
		.aui .site-navigation {
			margin-bottom: 0;
		}
		
		.navbar {
			min-height: 36px;
			width: 80%;
		}
		
		.aui #navigation .navbar-inner {
			background: none repeat scroll 0 0 #004291;
			border-width: 0;
			height: 36px;
			min-height: 36px;
			max-height: 36px;
		}
		
		#breadcrumbs {
			background-color:#d3d3d3
		}
		
		.breadcrumb {
			background-color:#d3d3d3
		}
		
		.aui body  {
			background: #eee
		}
		
		#footer {
			background-color:#004291;
			height:100px;
			width:100%;
			color:white;
			padding: 20px
		}
	</style>
</head>

<body class="$css_class">

<a href="#main-content" id="skip-to-content">#language ("skip-to-content")</a>

$theme.include($body_top_include)

#dockbar()

<div class="container-fluid" id="wrapper">
	<div id="wrapper-in">
		<header id="top-header" style="width:100%; height:55px; background-color: white">
			<table style="width:100%; height:100%;">
				<tr>
					<td></td>
					<td></td>
					<td style="background-color:#004291; width:20%"></td>
				</tr>
			</table>
		</header>
		
		<header id="banner" role="banner">
			<div id="heading">
				<!--
				<h1 class="site-title">
					<a class="$logo_css_class" href="$site_default_url" title="#language_format ("go-to-x", [$site_name])">
					
						<img alt="$logo_description" height="$site_logo_height" src="$site_logo" width="$site_logo_width" />

						#if ($show_site_name)
							<span class="site-name" title="#language_format ("go-to-x", [$site_name])">
								$site_name
							</span>
						#end
					</a>

				</h1>
				-->
				<h2 class="page-title">
					<span>$the_title</span>
				</h2>
			</div>

			#if ($has_navigation || $is_signed_in)
				#parse ("$full_templates_path/navigation.vm")
			#end
			
			
		</header>

		<div id="content">
			<nav id="breadcrumbs">#breadcrumbs()</nav>

			#if ($selectable)
				$theme.include($content_include)
			#else
				$portletDisplay.recycle()

				$portletDisplay.setTitle($the_title)

				$theme.wrapPortlet("portlet.vm", $content_include)
			#end
		</div>


	</div>

</div>

<footer id="footer" role="contentinfo">
	<p class="powered-by">
		#language ("powered-by") Theodoros Stroh
		<!-- #language ("powered-by") <a href="http://www.liferay.com" rel="external">Liferay</a> -->
	</p>
</footer>

$theme.include($body_bottom_include)

$theme.include($bottom_include)

</body>

</html>